<div class = "container-lg">

  <h1><%= @place["name"] %></h1>
  <p>
    <% if @current_user != nil %>
      <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-success"> New Post </a>
    <% end %>
  </p>

  <% if @posts == nil %>

  You have no posts for this place! Create a new post using the button above.

  <% else %>

  <div class = "row gx-5 pt-3">
    <% for post in @posts %>
       <div class = "col-lg-4 row-gap-5">
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image)%>" class = "img-fluid">
        <% end %>
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>

<% end %>


</div>