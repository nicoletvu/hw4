<div class = "container-lg">

  <h1><%= @place["name"] %></h1>
  <p>
    <% if @current_user != nil %>
      <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-success"> New Post </a>
    <% end %>
  </p>

  <div class = "row gx-5 pt-3">
    <% for post in @posts %>
       <div class = "col-lg-4 row-gap-3">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>

  <!--
  <p>
    <a href="/places" class="btn btn-success" >Back to All Places</a>
  </p>
  -->

</div>