<div class = "container-lg">

  <h2>New User Signup</h2>

  <div class = "pt-3">

    <%= form_with :model => @user do |form| %>
      <p>
        <%= form.label "username" %>
        <%= form.text_field "username" %>
      </p>
      <p>
        <%= form.label "email" %>
        <%= form.text_field "email" %>
      </p>
      <p>
        <%= form.label "password" %>
        <%= form.password_field "password" %>
      </p>
      <p>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
      </p>
    <% end %>

  </div>

</div>